---
import type { CSSParams } from "@jsxstyle/core";
import { cacheSingleton } from "@jsxstyle/core";

interface Props<K extends keyof astroHTML.JSX.DefinedIntrinsicElements = "div">
  extends CSSParams,
    Pick<astroHTML.JSX.DefinedIntrinsicElements[K], "slot"> {
  component?: K;
  props?: astroHTML.JSX.DefinedIntrinsicElements[K];
}

const { component: Element = "div", ...astroProps } = Astro.props;
const props = cacheSingleton.getComponentProps(astroProps, "class");
---

<Element {...props}><slot /></Element>
